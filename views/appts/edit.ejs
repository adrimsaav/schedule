<%- include('../partials/header') %>

<form action="/appts/<%= appt._id %>" method="POST"">

   <div class="days">
    <br>Pick Day for Visit:
      <br>
        <input type="date" name="date" value="<%= appt.date %>"/>
      <br>
    </div><br>

    <div class="note">Any special requests or comments you would like to make?</div>
    <div>
      <textarea class="note" id="comment" name="comment" placeholder="E.g. 9:00AM - 1:00PM, Only Main Floor, Pets will Be Home, etc." style="width: 400px" rows="12"><%= appt.comment %></textarea>
    </div><br>

    <div class="button">
      <button type="submit">Submit</button>
    </div>

  </form>

<%- include('../partials/footer') %>